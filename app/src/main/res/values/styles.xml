<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#f9fafe</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#f9fafe</item>
    </style>

    <style name="TeamName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Scores">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#f9fafe</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="win">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#f9fafe</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>